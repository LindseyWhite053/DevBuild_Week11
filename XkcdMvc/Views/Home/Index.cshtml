@model Comic;
@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>

    @if (Model != null)
    {
        <h2>Comic Number: @Model.num</h2>
        <div>
            Published on @Model.year-@Model.month-@Model.day
        </div>
        <div>
            <img src="@Model.img"/>
        </div>
        <div>
            @if(Model.num > 1)
            {
                <a href="/home/index?comicnum=@(Model.num-1)">&lt;Prev</a>         
            }

            @if(Model.num < 2683)
            {
                <a href="/home/index?comicnum=@(Model.num+1)">Next&gt;</a> 
            }

        </div>
    }
    else
    {
        <div>
            Sorry, that comic wasn't found
        </div>
    }

    <div>
        <form method="post" action="/home/index">
        What number comic would you like to see? 
        <input type="text" name="comicnum"/> 
        <input type="submit"/>
        </form>
    </div>
</div>
